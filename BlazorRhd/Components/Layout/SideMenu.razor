<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
                <b>Conalep</b>
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink @bind-Visible="pagesBarVisible" To="/Expedientes">
                    <BarIcon IconName="IconName.Folder" />
                    Expedientes
                </BarLink>
            </BarItem>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.LayerGroup" />
                        Nominas
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Nomina/Admistrativa">Administrativa</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Nomina/Docente">Docentes</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Nomina/Docente Honorarios">Honorarios</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Nomina/Capacitacion">Capacitacion</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Nomina/Promotores">Promotores Deportivos</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Nomina/Intersemestrales">Intersemestrales</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>


            <BarItem>
                <BarDropdown >
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Folder" />
                        Ejemplo
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/simple-form">Simple Form</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/simple-datagrid">Simple DataGrid</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
        <BarEnd>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Wrench" />
                        Utilidades
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Usuarios">
                            <BarIcon IconName="IconName.UserTie" />
                            Usuarios
                        </BarDropdownItem>
                        <BarDropdownItem To="/Renapo">
                            <BarIcon IconName="IconName.UserCheck" />
                            Renapo
                        </BarDropdownItem>
                        <BarDropdownItem To="/SatId">
                            <BarIcon IconName="IconName.Fingerprint" />
                            SatID
                        </BarDropdownItem>
                        <BarDropdownItem To="/ConfrontaISSSTE">
                            <BarIcon IconName="IconName.Table" />
                            Confronta ISSSTE
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

        </BarEnd>
    </BarMenu>
</Bar>
@code {
    private bool pagesBarVisible = true;

    RenderFragment customIcon =@<img src="/logo-cnp.png" style="width:40px; height: 32px" />;
}